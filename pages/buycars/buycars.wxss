/* pages/buycars/buycars.wxss */
@import "../../template/nav.wxss";

.topbg .img image {
  width: 100%;
  height: 20em;
}

.buycarCon {
  margin: -10% 0.5em 0;
  background-color: #fff;
  position: relative;
  z-index: 2;
  font-size: 0.95em;
  padding: 1em;
  border-radius: 0.3em;
  box-shadow: 0 0 1em rgba(0, 0, 0, 0.1);
  color: #2c4955;
  margin-bottom: 5em;
}

.buycarCon picker, .buycarCon .name {
  padding: 0.75em 0;
  border-bottom: 1px solid #eee;
}

.buycarCon .name .inputText {
  width: 22%;
  display: inline-block;
  vertical-align: middle;
}

.buycarCon .name input {
  display: inline-block;
  width: 77%;
  vertical-align: middle;
  padding: 0 0.5em;
  box-sizing: border-box;
}

.buycarCon .submit {
  background-color: #ff7200;
  color: #fff;
  display: block;
  margin: 0.75em 0;
  width: 100%;
  text-align: center;
  padding: 0.75em 0;
}

/**/

.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.4);
  display: none;
}

.zan-dialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 100%;
  height: 85vh;
  background: #f8f8f8;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 20rpx;
  bottom: 0;
}

.zan-dialog--show .zan-dialog__container {
  transform: translateY(0);
}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

.brandchosse text {
  display: block;
  padding: 0.75em 0;
  border-bottom: 1px solid #eee;
}

.tips {
  padding: 1em 0;
}

.tips .h3 {
  padding: 0.5em 0;
  color: rgba(0, 0, 0, 0.5);
}

.tips .p {
  font-size: 0.8em;
  color: rgba(0, 0, 0, 0.3);
}

.tips .ul .li {
  margin: 0em 0 1em;
}

.close {
  float: left;
  width: 10%
}
