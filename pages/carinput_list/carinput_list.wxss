/* 弹出框 */
.wx-popup {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  max-width: 600rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}
.wx-popup-title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 30rpx;
  box-sizing: border-box;
}
.wx-popup-con {
  padding: 15rpx;
  margin: 0 15rpx;
}
.wx-popup-btn {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}
.wx-popup-btn text {
  flex: 1;
  align-items: center;
  justify-content: center;
  padding:15rpx;
  background: #eee;
  font-size: 30rpx;
  text-align: center;
  margin: 0 15rpx;
}
.wx-popup-con{
  font-size: 30rpx;
  border: 1px solid #eee;
  text-align: left;
}
.wx-popup-con textarea{
  width: 100%;
  height: 150rpx;
}
.wx-popup-btn .btn-ok{
  background: #76919c;
  color: #fff;
}

.wx-popup-con .li{
  text-align: center;
  padding: 22rpx 0;
  font-size: 30rpx;
}

.condition-nav .active{
  background: #76919c;
  color: #fff;
}

.shencheTime{
  text-align: center;
  font-size: 28rpx;
  background: #eee;
  margin: 15rpx;
  padding: 20rpx 0;
}